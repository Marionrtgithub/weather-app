body {
    height: 100vh;
    margin: 0;
    padding: 0;
    background: url('https://source.unsplash.com/1600x900/?weather') no-repeat center center fixed !important; /* Set background image */
    background-size: cover; 
    font-family: 'Roboto', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
}

.container {
    max-width: 650px;
    padding-top: 50px;
    padding-bottom: 50px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    padding: 30px;
}


h1 {
    font-size: 2.5rem;
    color: #0044cc;
    font-weight: 700;
    animation: fadeIn 1s ease-in-out;
    text-align: center;
}

.form-control {
    border-radius: 10px;
    font-size: 1.1rem;
    padding: 12px;
    transition: all 0.3s ease;
}

.form-control:focus {
    box-shadow: 0px 0px 8px rgba(0, 85, 255, 0.6);
    border-color: #0044cc;
}


.btn-primary {
    background-color: #0044cc;
    border: none;
    padding: 12px;
    font-size: 1.1rem;
    border-radius: 10px;
    transition: all 0.3s ease;
    animation: pulse 2s infinite;
    width: 100%;
}

.btn-primary:hover {
    background-color: #0033a0;
    transform: scale(1.05);
}


.weather-info {
    background-color: #fff;
    padding: 20px;
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(17, 17, 17, 0.1);
    margin-top: 20px;
}

.weather-info img.weather-icon {
    width: 120px;
    height: 120px;
    margin-top: 15px;
    transition: transform 0.3s ease;
}

.weather-info:hover .weather-icon {
    transform: scale(1.1) rotate(15deg);
}


.spinner-border {
    margin-top: 30px;
    animation: spin 1s infinite linear;
}

.alert-danger {
    background-color: #ffcccc;
    color: #e60000;
    font-weight: 600;
    font-size: 1.1rem;
    padding: 15px;
    border-radius: 10px;
}

@keyframes fadeIn {
    0% {
        opacity: 0;
        transform: translateY(-50px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes pulse {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.1);
    }
    100% {
        transform: scale(1);
    }
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

@media (max-width: 576px) {
    .weather-info {
        padding: 15px;
    }
    .weather-info h3 {
        font-size: 1.5rem;
    }
    .form-control {
        font-size: 1rem;
    }
    .btn-primary {
        font-size: 1.1rem;
    }
}
